{
	"extends": "airbnb-base",
	"env": {
		"node": true
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2018,
		"ecmaFeatures": {
			"classes": true
		}
	},
	"plugins": ["babel"],
	"rules": {
		"semi": ["error", "never"],
		"linebreak-style": ["warn", "windows"],
		"object-curly-spacing": [
			"warn",
			"always",
			{ "arraysInObjects": true, "objectsInObjects": true }
		],
		"comma-dangle": ["error", "never"],
		"max-len": ["error", { "code": 95, "comments": 80 }],
		"indent": ["error", "tab"],
		"no-tabs": "off",
		"no-console": "off",
		"no-plusplus": "off",
		"arrow-parens": ["error", "as-needed"],
		"no-param-reassign": "off"
	}
}
